{
  "name": "explainium",
  "version": "2.0.0",
  "description": "Enterprise Knowledge Extraction System",
  "scripts": {
    "dev": "./deploy.sh --dev",
    "start": "./deploy.sh",
    "quick": "./deploy.sh --quick",
    "prod": "./scripts/production_deploy.sh",
    "stop": "docker-compose down --remove-orphans",
    "backend": "docker-compose up app celery_worker celery_beat",
    "frontend": "cd src/frontend && npm start",
    "services": "docker-compose up -d db redis tika",
    "logs": "docker-compose logs -f",
    "clean": "docker-compose down -v && docker system prune -f",
    "health": "python scripts/health_check.py",
    "health-monitor": "python scripts/health_check.py --monitor",
    "health-json": "python scripts/health_check.py --json",
    "validate": "python scripts/validate_installation.py"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imaddde867/explainium-2.0"
  },
  "author": "Imad Eddine",
  "license": "MIT"
}